<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/dp10"
    tools:context=".ui.admin.magazine.AddMagazineDialog">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="@dimen/dp20">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/blue_light"
            android:orientation="vertical">

            <TextView

                style="@style/text_info_style"
                android:text="Do'kon nomi" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp10"

                android:hint="Do'kon nomini kiriting">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/magazine_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white" />

            </com.google.android.material.textfield.TextInputLayout>


            <TextView
                style="@style/text_info_style"
                android:text="Do'kon manzili" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp10"
                android:hint="Do'kon manzilini kiriting">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/address_magazine"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white" />

            </com.google.android.material.textfield.TextInputLayout>


            <TextView
                style="@style/text_info_style"
                android:text="Do'kon lokatsiyasi" />


            <LinearLayout
                android:id="@+id/add_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp10"
                android:background="#B700E676"
                android:foreground="?android:attr/selectableItemBackground">

                <ImageView
                    android:layout_width="@dimen/dp50"
                    android:layout_height="@dimen/dp50"
                    android:padding="@dimen/dp5"
                    android:src="@drawable/ic_baseline_add_location_24"
                    app:tint="@color/red" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Do'kon lokatsiayni qo'shish uchun bosing"
                    android:textSize="@dimen/dp15" />

            </LinearLayout>


            <Button
                android:id="@+id/btn_add_magazine"
                android:layout_width="150dp"
                android:layout_height="@dimen/dp60"
                android:layout_gravity="center"
                android:layout_margin="@dimen/dp15"
                android:text="Qo'shish" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>


</LinearLayout>